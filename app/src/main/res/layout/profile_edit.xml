<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/profile_edit_pw"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:hint="비밀번호 변경"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/common_middle_margin"
        android:background="@drawable/custom_edittext_userinfo">
    </EditText>
    <EditText
        android:id="@+id/profile_edit_pw_check"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/common_middle_margin"
        android:background="@drawable/custom_edittext_userinfo">
    </EditText>

    <EditText
        android:id="@+id/profile_edit_description"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:hint="상태메시지"
        android:layout_marginBottom="@dimen/common_middle_margin"
        android:background="@drawable/custom_edittext_userinfo">
    </EditText>


    <EditText
        android:id="@+id/profile_edit_sport"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:hint="선호 스포츠"
        android:layout_marginBottom="@dimen/common_middle_margin"
        android:background="@drawable/custom_edittext_userinfo">
    </EditText>

    <EditText
        android:id="@+id/profile_edit_region"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="12dp"
        android:hint="활동 지역"
        android:layout_marginBottom="@dimen/common_big_margin"
        android:background="@drawable/custom_edittext_userinfo">
    </EditText>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:text="수정"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/radius_button_login">
    </Button>

</LinearLayout>