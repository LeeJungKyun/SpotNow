<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <!--    프로필 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginTop="@dimen/profile_image_top_margin"
            android:layout_marginLeft="@dimen/profile_image_left_margin"
            android:background="@drawable/circle"
            app:civ_border_overlay="true"
            app:civ_border_width="5dp"
            app:civ_border_color="#000000"
            android:src="@drawable/ic_launcher_foreground" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_name_top_margin"
                android:layout_marginLeft="@dimen/profile_name_left_margin"
                android:text="윤서겅듀"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저는 윤서겅듀에요"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginLeft="@dimen/profile_name_left_margin"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <!--    팔로잉 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40">
        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:id="@+id/hosting_num"
                    android:text="7"
                    android:textSize ="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/following_num"
                    android:text="12"
                    android:textSize ="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/follower_num"
                    android:text="17"
                    android:textSize ="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/hosting"
                    android:text="호스팅"
                    android:textSize ="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/following"
                    android:text="팔로잉"
                    android:textSize ="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/follower"
                    android:text="팔로워"
                    android:textSize ="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <!--    팔로우 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/profile_edit_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:text="프로필 수정" />
    </LinearLayout>
    <!--    매너지수-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="200"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:text="매너지수"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:scaleY="3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:progress="40"
            android:max="100" />
    </LinearLayout>

    <!--    선호스포츠-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="800"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/address_left_margin"
            android:text="선호 스포츠"/>
        <TextView
            android:gravity="center"
            android:id="@+id/profile_like_sport"
            android:layout_width="289dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/activity_list_left_margin"
            android:layout_marginTop="@dimen/activity_list_top_margin"
            android:background="#E2F5FF"/>
    </LinearLayout>

    <!--    활동지역-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="800"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/address_left_margin"
            android:text="활동지역"/>
        <TextView
            android:gravity="center"
            android:id="@+id/profile_region"
            android:layout_width="289dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/address_left_margin"
            android:layout_marginTop="@dimen/address_top_margin"
            android:background="#EEE9FB"/>
    </LinearLayout>
</LinearLayout>